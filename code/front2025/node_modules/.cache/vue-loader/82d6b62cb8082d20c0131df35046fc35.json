>댓글 {{ post.comments }}</h3>\r\n      \r\n      <!-- 댓글 입력창 -->\r\n      <div class=\"comment-input\">\r\n        <el-input\r\n          type=\"textarea\"\r\n          :rows=\"3\"\r\n          placeholder=\"댓글을 작성하세요...\"\r\n          v-model=\"newComment\"\r\n          :maxlength=\"500\"\r\n          show-word-limit>\r\n        </el-input>\r\n        <div class=\"input-actions\">\r\n          <el-button type=\"primary\" @click=\"submitComment\" :disabled=\"!newComment.trim()\">\r\n            댓글 작성\r\n          </el-button>\r\n        </div>\r\n      </div>\r\n\r\n      <!-- 댓글 목록 -->\r\n      <div class=\"comments-list\">\r\n        <div v-for=\"comment in commentList\" :key=\"comment.id\" class=\"comment-item\">\r\n          <div class=\"comment-user\">\r\n            <img :src=\"comment.userImage\" :alt=\"comment.realname\" class=\"comment-avatar\">\r\n            <div class=\"comment-info\">\r\n              <div class=\"comment-header\">\r\n                <span class=\"user-name\">{{ comment.realname }}</span>\r\n                <span class=\"comment-time\">{{ comment.createTime }}</span>\r\n              </div>\r\n              <p class=\"comment-content\">{{ comment.content }}</p>\r\n              <div class=\"comment-actions\" v-if=\"comment.reply\">\r\n                <span @click=\"replyComment(comment)\">답글: {{ comment.reply }}</span>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: 'PostDetail',\r\n  data() {\r\n    return {\r\n      post: {},\r\n      newComment: '',\r\n      commentList: [],\r\n      hasMore: true,\r\n      postId:'',\r\n      type:'',\r\n      userInfo:{},\r\n    }\r\n  },\r\n  methods: {\r\n     getDetail() {\r\n        let uid = ''\r\n        if(this.userInfo){\r\n            uid = this.userInfo.id\r\n        }\r\n        this.$axios.get('/api/forum/frontOne?id='+this.postId+\"&uid=\"+uid).then(res => {\r\n            this.post = res.data.data;\r\n            this.loadMessage();\r\n            if(this.post.content) {\r\n              this.post.content = this.post.content.replace(/<img/g, \r\n                '<img style=\"max-width: 600px; height: auto; max-height: 500px; object-fit: contain; margin: 10px 0; border-radius: 4px;\"'\r\n              );\r\n            }\r\n        });\r\n    },\r\n    loadMessage() {\r\n        var param = {\r\n            fid: this.postId,\r\n        };\r\n        this.$axios.post('/api/comment/frontAll',param).then(res => {\r\n            this.commentList = res.data.data;\r\n        });\r\n    },\r\n    toggleLike() {\r\n      if(this.type!=='02'){\r\n            this.$message.warning(\"사용자만 즐겨찾기 가능합니다\");\r\n            return;\r\n        }\r\n        if(this.userInfo!=null){\r\n            var param = {\r\n                fid: this.postId,\r\n                uid: this.userInfo.id\r\n            };\r\n            this.$axios.post('/api/stars/add', param).then(res => {\r\n                if(res.data.code == '200'){\r\n                    this.$message.success(\"즐겨찾기 완료\");\r\n                    this.getDetail();\r\n                }else{\r\n                    this.$message.warning(\"즐겨찾기 실패\");\r\n                }\r\n            })\r\n        }else{\r\n            this.$message.warning(\"로그인 후 이용 가능합니다\");\r\n        }\r\n    },\r\n    submitComment() {\r\n      if (!this.newComment.trim()) {\r\n          this.$message.warning('댓글 내용을 입력하세요')\r\n          return\r\n        }\r\n        if (!this.userInfo) {\r\n          this.$message({\r\n            message: \"시스템에 로그인 해주세요\",\r\n            type: \"warning\"\r\n          });\r\n          return;\r\n        }\r\n        if (this.type!=null && this.type!='02') {\r\n          this.$message({\r\n            message: \"사용자로 로그인 해주세요\",\r\n            type: \"warning\"\r\n          });\r\n          return;\r\n        }\r\n        const comment = {\r\n          fid: this.